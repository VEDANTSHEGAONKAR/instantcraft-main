{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
    ],
    "routes": [
        {
            "src": "/api/generate-website",
            "dest": "/api/generate_website.py"
        },
        {
            "src": "/api/modify-website",
            "dest": "/api/modify_website.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
} 